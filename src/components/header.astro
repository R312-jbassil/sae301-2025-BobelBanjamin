---
import PocketBase from "pocketbase";

let user = null;
if (Astro.cookies?.get("pb_auth")) {
    try {
        const pb = new PocketBase(
            import.meta.env.PUBLIC_POCKETBASE_URL || "http://127.0.0.1:8090",
        );
        pb.authStore.loadFromCookie(Astro.cookies.get("pb_auth").value);
        user = pb.authStore.model;
    } catch {}
}
---

<header class="header-wrapper">
    <div class="header-container">
        <!-- Logo IDENTIQUE FOOTER -->
        <a href="/" class="header-logo">
            <div class="footer-logo">
                <div class="footer-logo-circle"></div>
            </div>
        </a>
        <!-- Nav -->
        <nav class="header-nav">
            <a href="/collection" class="nav-link">Collection</a>
            <a href="/personnalisation" class="nav-link">Personnalisation</a>
            <a href="/a-propos" class="nav-link">À propos</a>
        </nav>
        <div class="header-auth">
            {
                user ? (
                    <a href="/logout" class="nav-link nav-logout">
                        Déconnexion →
                    </a>
                ) : (
                    <a href="/login" class="nav-link nav-login">
                        Connexion →
                    </a>
                )
            }
        </div>
    </div>
</header>

<style>
    /* Réutilise exactement le style du footer pour le logo header */
    .footer-logo {
        width: fit-content;
        margin-bottom: 0.5rem;
    }
    .footer-logo-circle {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        border: 3px solid #1e40af;
        background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
        mask: radial-gradient(circle, transparent 40%, black 60%);
        -webkit-mask: radial-gradient(circle, transparent 40%, black 60%);
    }
    /* ----------- Header reste identique ----------- */
    .header-wrapper {
        width: 100vw;
        background: #fff;
        box-shadow: 0 2px 12px #1e40af13;
        z-index: 20;
    }
    .header-container {
        max-width: 1150px;
        margin: 0 auto;
        width: 100%;
        min-height: 68px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.15rem 3rem 1.15rem 3rem;
        gap: 2rem;
    }
    .header-logo {
        display: flex;
        align-items: center;
        flex-shrink: 0;
        margin-right: 1.7rem;
        text-decoration: none;
    }
    .header-nav {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3.1rem;
    }
    .nav-link {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: 0.09em;
        color: #171b31;
        text-decoration: none;
        text-transform: uppercase;
        transition: color 0.23s;
        border-radius: 6px;
        padding: 0.3em 0.5em;
    }
    .nav-link:hover {
        color: #2563eb;
        background: #c3e0ff21;
    }
    .header-auth {
        display: flex;
        align-items: center;
        min-width: 0;
        gap: 0.5rem;
        margin-left: 1.7rem;
    }
    .nav-login,
    .nav-logout {
        color: #2563eb;
        font-weight: 700;
        padding-right: 0;
        padding-left: 0;
        letter-spacing: 0.09em;
    }
    @media (max-width: 900px) {
        .header-container {
            padding: 1rem 1.2rem;
            gap: 0.7rem;
        }
        .header-nav {
            gap: 1.2rem;
        }
        .header-logo {
            margin-right: 0.7rem;
        }
    }
    @media (max-width: 700px) {
        .header-container {
            flex-direction: column;
            align-items: center;
            gap: 0.36rem;
            min-height: 54px;
        }
        .header-nav {
            gap: 0.81rem;
            margin: 0.3rem 0;
        }
        .header-logo {
            margin-right: 0;
            margin-bottom: 0.51rem;
        }
        .header-auth {
            margin: 0;
        }
    }
</style>
