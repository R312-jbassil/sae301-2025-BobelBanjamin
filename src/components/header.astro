---
import PocketBase from "pocketbase";

let user = null;
if (Astro.cookies?.get("pb_auth")) {
    try {
        const pb = new PocketBase(
            import.meta.env.PUBLIC_POCKETBASE_URL || "http://127.0.0.1:8090",
        );
        pb.authStore.loadFromCookie(Astro.cookies.get("pb_auth").value);
        user = pb.authStore.model;
    } catch {}
}
---

<header class="header-wrapper">
    <div class="header-container">
        <!-- Logo IDENTIQUE FOOTER -->
        <a href="/" class="header-logo">
            <div class="footer-logo">
                <div class="footer-logo-circle"></div>
            </div>
        </a>
        <!-- Nav -->
        <nav class="header-nav">
            <a href="/collection" class="nav-link">Collection</a>
            <a href="/personnalisation" class="nav-link">Personnalisation</a>
            <a href="/ia-generator" class="nav-link">IA Générateur</a>
            <a href="/a-propos" class="nav-link">À propos</a>
        </nav>
        <div class="header-auth">
            {
                user ? (
                    <div class="auth-connected">
                        <a
                            href="/panier"
                            class="nav-link panier-link"
                            title="Panier"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <circle cx="9" cy="21" r="1" />
                                <circle cx="20" cy="21" r="1" />
                                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                            </svg>
                            <span class="panier-badge" id="panier-count">
                                0
                            </span>
                        </a>
                        <div class="profile-menu">
                            <button class="profile-btn" id="profile-toggle">
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                                    <circle cx="12" cy="7" r="4" />
                                </svg>
                            </button>
                            <div class="profile-dropdown" id="profile-dropdown">
                                <div class="profile-info">
                                    <p class="profile-email">{user.email}</p>
                                </div>
                                <hr class="profile-divider" />
                                <a href="/collection" class="profile-item">
                                    <svg
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <rect
                                            x="3"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="14"
                                            y="3"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="14"
                                            y="14"
                                            width="7"
                                            height="7"
                                        />
                                        <rect
                                            x="3"
                                            y="14"
                                            width="7"
                                            height="7"
                                        />
                                    </svg>
                                    Ma Collection
                                </a>
                                <a href="/panier" class="profile-item">
                                    <svg
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <circle cx="9" cy="21" r="1" />
                                        <circle cx="20" cy="21" r="1" />
                                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                                    </svg>
                                    Mon Panier
                                </a>
                                <hr class="profile-divider" />
                                <a href="/logout" class="profile-item logout">
                                    <svg
                                        width="18"
                                        height="18"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                                        <polyline points="16 17 21 12 16 7" />
                                        <line x1="21" y1="12" x2="9" y2="12" />
                                    </svg>
                                    Déconnexion
                                </a>
                            </div>
                        </div>
                    </div>
                ) : (
                    <a href="/login" class="nav-link nav-login">
                        Connexion →
                    </a>
                )
            }
        </div>
    </div>
</header>

<style>
    /* Réutilise exactement le style du footer pour le logo header */
    .footer-logo {
        width: fit-content;
        margin-bottom: 0.5rem;
    }
    .footer-logo-circle {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        border: 3px solid #1e40af;
        background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
        mask: radial-gradient(circle, transparent 40%, black 60%);
        -webkit-mask: radial-gradient(circle, transparent 40%, black 60%);
    }
    /* ----------- Header reste identique ----------- */
    .header-wrapper {
        width: 100vw;
        background: #fff;
        box-shadow: 0 2px 12px #1e40af13;
        z-index: 20;
    }
    .header-container {
        max-width: 1150px;
        margin: 0 auto;
        width: 100%;
        min-height: 68px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.15rem 3rem 1.15rem 3rem;
        gap: 2rem;
    }
    .header-logo {
        display: flex;
        align-items: center;
        flex-shrink: 0;
        margin-right: 1.7rem;
        text-decoration: none;
    }
    .header-nav {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3.1rem;
    }
    .nav-link {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: 0.09em;
        color: #171b31;
        text-decoration: none;
        text-transform: uppercase;
        transition: color 0.23s;
        border-radius: 6px;
        padding: 0.3em 0.5em;
    }
    .nav-link:hover {
        color: #2563eb;
        background: #c3e0ff21;
    }
    .header-auth {
        display: flex;
        align-items: center;
        min-width: 0;
        gap: 0.5rem;
        margin-left: 1.7rem;
    }

    .auth-connected {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    /* Panier */
    .panier-link {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        color: #171b31;
        transition: all 0.3s ease;
    }

    .panier-link:hover {
        color: #2563eb;
        background: #e7f3ff;
    }

    .panier-badge {
        position: absolute;
        top: -2px;
        right: -2px;
        background: #ef4444;
        color: white;
        font-size: 0.65rem;
        font-weight: 700;
        min-width: 18px;
        height: 18px;
        border-radius: 9px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 5px;
        border: 2px solid white;
    }

    .panier-badge:empty {
        display: none;
    }

    /* Menu profil */
    .profile-menu {
        position: relative;
    }

    .profile-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        background: transparent;
        border: none;
        color: #171b31;
        cursor: pointer;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .profile-btn:hover {
        color: #2563eb;
        background: #e7f3ff;
    }

    .profile-dropdown {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        min-width: 220px;
        padding: 0.75rem 0;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .profile-dropdown.active {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .profile-info {
        padding: 0.75rem 1rem;
    }

    .profile-email {
        font-size: 0.875rem;
        font-weight: 600;
        color: #171b31;
        margin: 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .profile-divider {
        border: none;
        border-top: 1px solid #e5e7eb;
        margin: 0.5rem 0;
    }

    .profile-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        color: #171b31;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .profile-item:hover {
        background: #f3f4f6;
        color: #2563eb;
    }

    .profile-item.logout {
        color: #ef4444;
    }

    .profile-item.logout:hover {
        background: #fef2f2;
        color: #dc2626;
    }

    .profile-item svg {
        flex-shrink: 0;
    }

    .nav-login,
    .nav-logout {
        color: #2563eb;
        font-weight: 700;
        padding-right: 0;
        padding-left: 0;
        letter-spacing: 0.09em;
    }
    @media (max-width: 900px) {
        .header-container {
            padding: 1rem 1.2rem;
            gap: 0.7rem;
        }
        .header-nav {
            gap: 1.2rem;
        }
        .header-logo {
            margin-right: 0.7rem;
        }
    }
    @media (max-width: 700px) {
        .header-container {
            flex-direction: column;
            align-items: center;
            gap: 0.36rem;
            min-height: 54px;
        }
        .header-nav {
            gap: 0.81rem;
            margin: 0.3rem 0;
        }
        .header-logo {
            margin-right: 0;
            margin-bottom: 0.51rem;
        }
        .header-auth {
            margin: 0;
        }
    }
</style>

<script>
    // Menu profil déroulant
    const profileToggle = document.getElementById("profile-toggle");
    const profileDropdown = document.getElementById("profile-dropdown");

    if (profileToggle && profileDropdown) {
        profileToggle.addEventListener("click", (e) => {
            e.stopPropagation();
            profileDropdown.classList.toggle("active");
        });

        // Fermer le menu quand on clique ailleurs
        document.addEventListener("click", (e) => {
            if (
                !profileToggle.contains(e.target) &&
                !profileDropdown.contains(e.target)
            ) {
                profileDropdown.classList.remove("active");
            }
        });
    }

    // Mettre à jour le compteur du panier
    async function updatePanierCount() {
        const badge = document.getElementById("panier-count");
        if (!badge) return;

        try {
            const response = await fetch("/api/panier");
            const data = await response.json();

            if (data.success) {
                const count = data.items.length;
                badge.textContent = count > 0 ? count : "";
                badge.style.display = count > 0 ? "flex" : "none";
            }
        } catch (error) {
            console.error("Erreur chargement panier:", error);
            badge.textContent = "";
            badge.style.display = "none";
        }
    }

    // Mettre à jour au chargement
    updatePanierCount();

    // Mettre à jour quand on dispatch l'événement
    window.addEventListener("panier-updated", updatePanierCount);
</script>
