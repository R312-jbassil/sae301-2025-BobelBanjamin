<footer class="footer-wrapper">
    <div class="footer-container">
        {/* Colonne 1 : Logo + Description - CLIQUABLE */}
        <a href="/" class="footer-col footer-col-1 footer-logo-link">
            <div class="footer-logo">
                <div class="footer-logo-circle"></div>
            </div>
            <p class="footer-desc">
                TaVue, lunettes sur mesure fabriquées<br />
                en France.
            </p>
        </a>

        {/* Colonne 2 : Navigation */}
        <div class="footer-col">
            <h3 class="footer-heading">Navigation</h3>
            <ul class="footer-list">
                <li><a href="/" class="footer-link">Accueil</a></li>
                <li>
                    <a href="/personnalisation" class="footer-link"
                        >Personnalisation</a
                    >
                </li>
                <li>
                    <a href="/collection" class="footer-link">Ma Collection</a>
                </li>
                <li><a href="/a-propos" class="footer-link">À propos</a></li>
            </ul>
        </div>

        {/* Colonne 3 : Informations */}
        <div class="footer-col">
            <h3 class="footer-heading">Informations</h3>
            <ul class="footer-list">
                <li><a href="/livraison" class="footer-link">Livraison</a></li>
                <li><a href="/garantie" class="footer-link">Garantie</a></li>
                <li><a href="/retours" class="footer-link">Retours</a></li>
                <li><a href="/contact" class="footer-link">Contact</a></li>
            </ul>
        </div>

        {/* Colonne 4 : Newsletter */}
        <div class="footer-col footer-col-newsletter">
            <h3 class="footer-heading">Newsletter</h3>
            <p class="footer-newsletter-text">
                -10% sur votre première commande
            </p>
            <form class="footer-form">
                <input
                    type="email"
                    placeholder="Email"
                    class="footer-input"
                    required
                />
                <button type="submit" class="footer-btn">OK</button>
            </form>
        </div>

        {/* Ligne separator */}
        <div class="footer-divider"></div>

        {/* Bottom footer */}
        <div class="footer-bottom">
            <p class="footer-copyright">© 2025 TaVue. Tous droits réservés.</p>
            <div class="footer-bottom-links">
                <a href="/mentions-legales" class="footer-bottom-link"
                    >Mentions légales</a
                >
                <a href="/cgv" class="footer-bottom-link">CGV</a>
            </div>
        </div>
    </div>
</footer>

<style>
    

    .footer-container {
        width: 100%;
        background: white;
        border-radius: 0;
        padding: 2rem 3rem;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .footer-col {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-col-1 {
        grid-column: 1;
    }

    .footer-col-newsletter {
        grid-column: 4;
    }

    .footer-logo-link {
        text-decoration: none;
        color: inherit;
        cursor: pointer;
        transition: opacity 0.3s ease;
    }

    .footer-logo-link:hover {
        opacity: 0.7;
    }

    .footer-logo {
        width: fit-content;
        margin-bottom: 0.5rem;
    }

    .footer-logo-circle {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        border: 3px solid #1e40af;
        background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
        mask: radial-gradient(circle, transparent 40%, black 60%);
        -webkit-mask: radial-gradient(circle, transparent 40%, black 60%);
    }

    .footer-desc {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.875rem;
        line-height: 1.6;
        color: #666;
        margin: 0;
    }

    .footer-heading {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: #1a1a1a;
        margin: 0;
    }

    .footer-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .footer-link {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.875rem;
        color: #1a1a1a;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-link:hover {
        color: #1e40af;
    }

    .footer-newsletter-text {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.75rem;
        color: #666;
        margin: 0;
    }

    .footer-form {
        display: flex;
        gap: 0;
    }

    .footer-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 2px solid #1e40af;
        border-radius: 0.375rem 0 0 0.375rem;
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.875rem;
        outline: none;
        transition: border-color 0.3s ease;
    }

    .footer-input:focus {
        border-color: #2563eb;
    }

    .footer-btn {
        padding: 0.75rem 1.25rem;
        background: linear-gradient(to right, #1e40af, #2563eb);
        color: white;
        border: none;
        border-radius: 0 0.375rem 0.375rem 0;
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: opacity 0.3s ease;
        box-shadow: 0 2px 8px rgba(37, 99, 235, 0.3);
    }

    .footer-btn:hover {
        opacity: 0.9;
    }

    .footer-divider {
        grid-column: 1 / -1;
        width: calc(100% + 6rem);
        margin-left: -3rem;
        margin-right: -3rem;
        height: 1px;
        background: #e5e5e5;
    }

    .footer-bottom {
        grid-column: 1 / -1;
        width: calc(100% + 6rem);
        margin-left: -3rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 3rem 0 3rem;
    }

    .footer-copyright {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.75rem;
        color: #888;
        margin: 0;
    }

    .footer-bottom-links {
        display: flex;
        gap: 1.75rem;
    }

    .footer-bottom-link {
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 0.75rem;
        color: #888;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-bottom-link:hover {
        color: #1e40af;
    }

    @media (max-width: 1024px) {
        .footer-container {
            grid-template-columns: repeat(2, 1fr);
        }

        .footer-col-newsletter {
            grid-column: 1 / -1;
        }
    }

    @media (max-width: 768px) {
        .footer-container {
            grid-template-columns: 1fr;
            padding: 1.5rem;
            gap: 1.5rem;
        }

        .footer-col-1 {
            grid-column: 1;
        }

        .footer-col-newsletter {
            grid-column: 1;
        }

        .footer-divider {
            width: calc(100% + 3rem);
            margin-left: -1.5rem;
            margin-right: -1.5rem;
        }

        .footer-bottom {
            width: calc(100% + 3rem);
            margin-left: -1.5rem;
            flex-direction: column;
            gap: 1rem;
            text-align: center;
            padding: 1.5rem 1.5rem 0 1.5rem;
        }

        .footer-bottom-links {
            flex-direction: column;
            gap: 0.5rem;
        }
    }
</style>
